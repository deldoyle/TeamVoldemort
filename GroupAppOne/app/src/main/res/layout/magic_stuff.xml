<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/spellOne" android:layout_below="@+id/spellTwo"
            android:layout_centerHorizontal="true" android:textSize="35sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/spellTwo" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:textSize="35sp"
            android:layout_marginTop="25sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/spellThree" android:textSize="35sp" android:layout_marginTop="25sp"/>
    </RadioGroup>
</RelativeLayout>