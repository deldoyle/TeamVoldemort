<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37474f"
                android:id="@+id/RelativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/callButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Hotline"
        android:typeface="monospace"
        android:background="@android:color/black"
        android:layout_margin="2dp"
        android:textColor="#f7f30c"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Google"
        android:id="@+id/googleButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="monospace"
        android:background="#000000"
        android:layout_margin="2dp"
        android:textColor="#f7f30c"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/resultsTextView"
        android:layout_below="@+id/googleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24dp"
        android:typeface="monospace"
        android:text="Results from Address"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PLEASE DONATE ALL OF YOUR MONEY TO US PLZ CHECK ME OUT ON SOUNDCLOUD yung_swag"
        android:id="@+id/friendlyMessage"
        android:layout_above="@+id/resultsTextView"
        android:layout_alignTop="@+id/callButton"
        android:layout_toRightOf="@+id/callButton"
        android:layout_toLeftOf="@+id/googleButton"
        android:layout_toStartOf="@+id/googleButton"
        android:textSize="12dp"
        android:textColor="#f7f30c"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_below="@+id/resultsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/voldybettt"/>

</RelativeLayout>